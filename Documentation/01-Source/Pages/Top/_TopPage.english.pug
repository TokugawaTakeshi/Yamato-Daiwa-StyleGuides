extends ../../../node_modules/@yamato-daiwa/programming_documentation/Layouts/Minimal/MinimalLayout.pug


block append Requirements

  include ../../SharedAssets/Markup/SharedAssets.english.pug
  include ../../SharedComponents/SharedComponents.english.pug


block append Metadata

  -

    RegularWebPageTemplate__YDF.configure({
      metadata: {
        title: buildHTML_PageTitle("Yamato Daiwa Styles Guides"),
        description:
            "The npm package \"Yamato Daiwa Styles Guides\" suggests the ESlint preset featuring by strictness and " +
              "not forgiving the negligence and incomprehension of own actions thus suited for high quality development."
      },
      stylesSheetsURIs: [
        "$CommonStyles",
        "$LayoutsStyles/Minimal/MinimalLayout.css",
        "$PreMadesStyles",
        "@CustomizedExternalComponents",
        "@Pages/Top/TopPage"
      ]
    });

    RoutingEmulator.setCurrentRoute("top");

    LanguageDropDownList__YDF_DK.setLinks({
      japanese: routing.japanese.top.$URI,
      russian: routing.russian.top.$URI
    });

    const localizedSectioning = localizedRouting.top.$sectioning;


block append HeadScripts

  if __IS_PRODUCTION_BUILDING_MODE__

    +GoogleAnalyticsScript


block append SpecificContent

  main.TopPage

    .TopPage-ImageAndTopHeadingGroup

      img.TopPage-ImageAndTopHeadingGroup-Image(
        src="@Shared/Icons/YDSG_Icon.svg"
        alt="The icon of Yamato Daiwa Style Guides"
      )

      h1.TopPage-ImageAndTopHeadingGroup-Heading
        span.TopPage-ImageAndTopHeadingGroup-Heading-FirstLine Yamato Daiwa
        span.TopPage-ImageAndTopHeadingGroup-Heading-SecondLine Style Guides

    p.TopPage-ShortDescription-Heading.
      Extremely Strict Presets for ESLint and pug-lint for Best Quality Development

    +SingleImageViewer--YDF({
      imageURI: "@AssociatedWithPages/Top/Images/TopPage-MainVisual.english",
      imageAlternateText:
          "\"Yamato Daiwa Style Guides\" (abbreviation: \"YDSG\") â€” the strictest presets of code analysis tools " +
            "for the best quality development",
      autoAspectRatioByYDA: true,
      geometry: SingleImageViewer__YDF.GeometricVariations.minimalistic,
      decoration: SingleImageViewer__YDF.DecorativeVariations.minimalistic
    }).TopPage-MainVisual

    +CompactTableOfContents--YDF_DK(localizedRouting).TopPage-TableOfContents
